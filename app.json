              "label": {
                "en": "Username",
                "nl": "Gebruikersnaam"
              },
              "value": ""
            },
            {
              "id": "password",
              "type": "password",
              "label": {
                "en": "Password",
                "nl": "Wachtwoord"
              },
              "value": ""
