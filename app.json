          "it": "La modalità del termostato è cambiata"
        },
        "tokens": [
          {
            "name": "oldMode",
            "type": "string",
            "title": {
              "en": "previous mode",
              "nl": "voorgaande modus"
            },
            "example": {
              "en": "cold",
              "nl": "koelen"
            }
          },
          {
            "name": "newMode",
            "type": "string",
            "title": {
              "en": "New mode",
              "nl": "huidige modus"
            },
            "example": {
              "en": "heat",
              "nl": "verwarmen"
            }
          }
